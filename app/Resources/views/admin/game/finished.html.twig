{% extends 'base.html.twig' %}

{% block heading %}
Game editor
{% endblock %}
{% block body %}
{% for flashMessage in app.session.flashbag.get('info') %}
    <div class="flash-notice">
        {{ flashMessage }}
    </div>
{% endfor %}
{% if finished %}	
<h2>Finished matches</h2>
<table class="padding-5 evenodd">
<tr>	
	<th>Datum</th>
	<th>Krog</th>
	<th class="align-right">Domači</th>
	<th></th>
	<th></th>
	<th></th>
	<th>Gosti</th>
	<th></th>
	<th></th>
	<th></th>
</tr>
{% for game in finished %}
<td><small>{{game.scheduled|date('d.m.Y H:i') }}</small></td>
<td>{{ game.round }}</td>
<td class="align-right">{{ game.homeTeam.name }}</td>
<td><strong>{{ game.scoreHome }}<strong></td>
<td>:</td>
<td><strong>{{ game.scoreAway }}<strong></td>
<td>{{ game.awayTeam.name }}</td>
<td>{% if game.recap %}<a href="{{ game.recap }}" title="Več o tekmi">več...</a>{% endif %}</td>
<td><a class="btn btn-default" href="/game/edit/{{ game.id }}">Edit</a></td>
<td><a class="btn btn-default" href="/game/remove/{{ game.id }}">Remove</a></td>
</tr>
{% endfor %}
</table>
{% endif %}

{% endblock %}

{% block sidebar %}

	Stranski meni tukaj. 
{% endblock %}